{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "paths": {
      "ROOT/*": ["./*"],
      "@*": ["./src/*"],
      "@api": ["./src/api"],
      "@api/*": ["./src/api/*"],
      "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"],
      "@constants/*": ["./src/data/constants/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@contexts": ["./src/contexts"],
      "@contexts/*": ["./src/contexts/*"],
      "@data": ["./src/data"],
      "@data/*": ["./src/data/*"],
      "@layouts": ["./src/layouts"],
      "@layouts/*": ["./src/layouts/*"],
      "@pages": ["./src/pages"],
      "@pages/*": ["./src/pages/*"],
      "@plugins": ["./src/plugins"],
      "@plugins/*": ["./src/plugins/*"],
      "@reducers": ["./src/reducers"],
      "@reducers/*": ["./src/reducers/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@@types/*": ["./src/@types/*"]
    }
  },
  "include": [
    "src/*",
    "src/@types/**/*.d.ts",
    "src/types/**/*.d.ts",
    "src/interfaces/**/*.d.ts",
    "src/global.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
